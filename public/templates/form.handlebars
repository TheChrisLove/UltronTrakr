<div class="col-md-6">
    <form class="form-horizontal">
        <fieldset>
            <legend>New Hater</legend>
            <div class="control-group">
                <input class="form-control" type="text" name="name" placeholder="Enter Your Name" />
            </div>
            <br>
            <div class="control-group">
                <input class="form-control" type="text" name="category" placeholder="Enter Your Category" />
            </div>
            <br>
            <div class="control-group">
                <input class="form-control" type="text" name="url" placeholder="Enter An URL" />
            </div>
            <br>
            <div class="control-group">
                <input class="form-control" type="text" name="imagepath" placeholder="Enter Path To Your Image" />
            </div>
            <br>
            <div class="control-group pull-right">
                <button type="button" class="btn btn-danger">
                    <span class="glyphicon glyphicon-remove"></span> Cancel</button>
